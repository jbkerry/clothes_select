{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "settings": {
      "react": {
        "version": "16.9.0"
      }
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": ["error", { "code": 120, "tabWidth": 2 }]
    }
}
